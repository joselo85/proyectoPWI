<section id="contacto">
    <div class="container">
        <div class="row section-title">
            <div class="col">
                <h2>Contactanos!</h2>
            </div>                    
        </div>
        <form action="https://formspree.io/f/mvodbbad" method="POST">
            <div class="row">
                <div class="col-lg-6 col-sm-12">
                    <div class="mb-3">
                        <label for="nombre" class="form-label">Nombre Completo</label>
                        <input type="text" class="form-control" id="nombre" placeholder="Nombre Completo" name="name" required>
                      </div>
                </div>
                <div class="col-lg-6 col-sm-12">
                    <div class="mb-3">
                        <label for="correo" class="form-label">Correo Electrónico</label>
                        <input type="email" class="form-control" id="correo" placeholder="nombre@ejemplo.com" name="_replyto" required>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-sm-12">
                    <div class="mb-3">
                      <label for="consulta" class="form-label"></label>
                      <div class="input-group">
                          <span class="input-group-text">Escribí tu consulta aquí</span>
                          <textarea id="consulta" class="form-control" aria-label="With textarea" placeholder="Opcional" name="message"></textarea>
                      </div>
                    </div>
                </div>
                
            </div>
            <div class="row justify-content-center">
                <div class="col-12">
                    <input id="contactForm" class="btn btn-primary" type="submit" value="Enviar Consulta">
                </div>
            </div>
        </form>
    </div>
</section>